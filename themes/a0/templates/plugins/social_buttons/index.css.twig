.social-buttons {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
    background: rgba(0, 0, 0, 0.3);
}

.social-buttons a {
    padding: 10px;
    display: block;
    color: #FDFDFD;
    border: 0;
    border-radius: 50%;
    margin: 10px;
    background: rgba(0, 0, 0, 0.5);
    text-align: center;
    text-decoration: none;
}

.social-buttons a:hover {
    background: rgba(0, 0, 0, 0.75);
}