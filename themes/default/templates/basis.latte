<!DOCTYPE html>
{block html}<html lang="en">{/block}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="GWM Dashboard">

    <link rel="stylesheet" href="/css/gwm.min.css">
    <link rel="stylesheet" href="/vendor/css/bootstrap.min.css">

    <script src="/vendor/js/jquery-3.5.1.min.js"></script>
    <script src="/js/gwm.min.js"></script>

    {block styles}
    {/block}

    {block scripts}
    {/block}

    <style>
    html, body {
      scrollbar-color: #515151 #2b2b2b;
      scrollbar-width: thin;
    }
    </style>

    <script type="text/javascript">
      document.addEventListener("DOMContentLoaded", function(event) {
            document.getElementById("toggle").addEventListener("click", function(e) {
                var navbar = document.getElementById("color-swap")
                if(navbar.className === 'navbar navbar-expand-lg navbar-dark bg-dark') {
                    navbar.className = 'navbar navbar-expand-lg navbar-light bg-light';
                } else {
                    navbar.className = 'navbar navbar-expand-lg navbar-dark bg-dark';
                }
            })
      });
    </script>

    <title>{spaceless}{block title}undefined{/block}{/spaceless}</title>
</head>

{block body}<body>{/block}
    <nav id="color-swap" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">{include title}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/auth">Auth</a>
                </li>

                {block nav}

                {/block}

                <li class="nav-item">
                    <a class="nav-link" href="/out">Logout</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                {block nav-right}

                {/block}

                <li class="nav-item">
                    <button id="toggle" class="btn nav-link"><i class="fa fa-sun"></i></button>
                </li>
            </ul>
        </div>
    </nav>

    {block container-override}

    <div id="carouselExampleControls" class="carousel slide mb-3" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" style="height:300px;">
          <img class="d-block w-100 bg-secondary" style="object-fit: cover; height: 300px;" src="" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <h5>Second slide label</h5>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
          </div>
        </div>
        <div class="carousel-item" style="height:300px;">
          <img class="d-block w-100 bg-primary" style="object-fit: cover; height: 300px;" src="" alt="First slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    {/block}

    {block layoutContent}{/block}

    <div class="container-fluid no-gutters">
        <div class="row">
            <div class="col-12">
                {block content}{/block}
            </div>
        </div>
    </div>

    <script src="/vendor/js/bootstrap.min.js"></script>

    {block afterscripts}
    {/block}
</body>

</html>